<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_500</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="colorPrimaryDark">@color/primary_700</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent_500</item>
        <item name="colorButtonNormal">@color/accent_500</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/primary_700</item>
    </style>

    <style name="Fullscreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ButtonDisabled">
        <item name="android:textColor">@color/disabled_text_button</item>
        <item name="android:background">@color/disabled_background_button</item>
    </style>

    <style name="BrandButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/accent_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BrandButtonStyle.Green" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/md_green_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BrandButtonStyle.Red" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/md_red_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BrandButtonStyle.Indigo" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/md_indigo_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
